<div class="container" id="LoginForm">
    <img src="https://img.hotimg.com/WhatsApp-Image-2024-02-23-at-8.01.36-PM.jpeg" alt="WhatsApp-Image-2024-02-23-at-8.01.36-PM.jpeg" border="0" />
    <br><br>
    <div class="offset-7 col-4 align-self-center">
        <form method="POST" action="/dologin">
            <input type="hidden" name="role" id="role" value="">
            <div class="form-group col">
                <label class="LoginText">Login As:</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="role" id="adminRadio" value="admin">
                    <label class="form-check-label text-white" for="adminRadio">Admin</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="role" id="studentRadio" value="student">
                    <label class="form-check-label text-white" for="studentRadio">Student</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="role" id="GuideRadio" value="Guide">
                    <label class="form-check-label text-white"  for="GuideRadio">Guide</label>
                </div>
            </div>

            <div class="form-group col">
                <label for="exampleInputEmail1" class="LoginText">Email address</label>
                <input type="email" name="email" value="{{this.email}}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group col">
                <label for="exampleInputPassword1" class="LoginText">Password</label>
                <input type="password" name="password" value="{{this.password}}" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <br>
        {{#if alert}}
        <div id="alert" class="alert alert-danger" role="alert">{{alert}}</div>
        {{/if}}
    </div>
    <!-- JavaScript code to hide the alert after 3 seconds -->
    <script>
        // Wait for the document to load
        document.addEventListener('DOMContentLoaded', function() {
            // Select the alert element
            var alertElement = document.getElementById('alert');

            // If the alert element exists
            if (alertElement) {
                // Set a timeout to hide the alert after 3 seconds
                setTimeout(function() {
                    alertElement.style.display = 'none';
                }, 3000); // 3 seconds in milliseconds
            }
        });
    </script>
</div>
