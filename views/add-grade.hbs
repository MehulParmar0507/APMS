<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <br>
            <label for="p_status">Project Status:</label>
            <select name="p_status" id="p_status" class="form-select">
                <option value="" disabled selected style="display: none;">Select</option>
                <option value="incomplete">Incomplete</option>
                <option value="complete">Complete</option>
                
            </select>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="form-group">
            <br>
            <label for="p_grade">Grade:</label>
            <select name="p_grade" id="p_grade" class="form-select">
                <option value="" disabled selected style="display: none;">Select</option>
                <option value="a">A</option>
                <option value="b">B</option>
                <option value="c">C</option>
                <option value="d">D</option>
                
            </select>
        </div>
    </div>
    <input type="hidden" name="id" value="{{this.id}}">
</div>

<br>
<div class="text-center">
    <button class="btn btn-primary" type="submit" style="background-color: #0e1539; border-radius: 15px;">Submit</button>
</div>


