<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/homeForGuide">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">View Project</li>
  </ol>
</nav>

<div class="container col-12">
  <br>
  
  <div class="row">
    {{#each rows}}
    <div class="col-6">
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">Project Name:</th>
            <td>{{this.Project_name}}</td>
          </tr> 
          <tr>
            <th scope="row">Project Link:</th>
            <td>{{this.Project_link}}</td>
          </tr>
          <tr>
            <th scope="row">Project Guide:</th>
            <td>{{this.Project_Guide}}</td>
          </tr>
          <tr>
            <th scope="row">Project Date:</th>
            <td>{{this.Project_Date}}</td>
          </tr>
          <tr>
            <th scope="row">Project Status:</th>
            <td>{{this.p_status}}</td>
          </tr>
          <tr>
            <th scope="row">Project Grade:</th>
            <td>{{this.p_grade}}</td>
          </tr>
        </tbody>
      </table>
    </div>
    {{/each}}
    
    <div class="col-6">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Project Members</th>
            <th scope="col">Department</th>
            <th scope="col">Email</th>
          </tr> 
        </thead>
        <tbody>
          {{#each tdrow}}
          <tr>
            <td>{{this.student_name}}</td>
            <td>{{this.Department}}</td>
            <td>{{this.Email}}</td>
    
          </tr>
          {{/each}}
        </tbody>
      </table>
      <a href="/addgrades/{{this.id.id}}" class="btn btn-primary">Add Grades</a>
    </div>
  </div>
</div>
